{
  "name": "npm-two-stage",
  "version": "6.0.1",
  "description": "Divide `npm install` into download and offline-install stages",
  "author": "Matthew Rafferty <mmraff@gmail.com>",
  "license": "Artistic-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mmraff/npm-two-stage.git"
  },
  "homepage": "https://github.com/mmraff/npm-two-stage#readme",
  "bugs": {
    "url": "https://github.com/mmraff/npm-two-stage/issues"
  },
  "keywords": [
    "npm",
    "download",
    "install",
    "offline",
    "packages",
    "package manager",
    "air-gap"
  ],
  "engines": {
    "node": ">=8.10.0"
  },
  "files": [
    "src/**/*.js"
  ],
  "scripts": {
    "test": "mocha test/01*.js",
    "test-spec": "mocha",
    "coverage": "nyc npm run test",
    "cover-spec": "nyc npm run test-spec",
    "backup": "tar czf ../npm2stage-6_backup.tgz --exclude-from=archive-excludes.txt --transform=\"s/^/project\\//\" *"
  },
  "nyc": {
    "exclude": [
      "src/",
      "test/",
      "!src/download/git-context.js",
      "!test/gitAux/npm/lib/download/git-aux.js",
      "!test/prepRawMod/npm/lib/prepare-raw-module.js",
      "!test/gitOffline/npm/lib/git-offline.js",
      "!test/offliner/npm/lib/offliner.js",
      "!test/fetchPkgMeta/npm/lib/fetch-package-metadata.js",
      "!test/download/npm/lib/download.js"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "aproba": "^2.0.0",
    "call-limit": "^1.1.1",
    "chai": "^4.3.6",
    "graceful-fs": "^4.2.3",
    "mocha": "^7.2.0",
    "npm-package-arg": "^6.1.1",
    "nyc": "^14.1.1",
    "rimraf": "^2.6.3"
  }
}
